import { Autowired } from '@exteranto/ioc'
import { Dispatcher } from '@exteranto/events'

class SomeService {

  @Autowired
  private dispatcher: Dispatcher

  public execute () : void {
    // Note that you are strongly advised to use the 'fire' method on the
    // dispatcher instead as it provides exception handling for the listeners.
    this.dispatcher.touch('my.event').dispatch({ ... })
  }
}
