import { Cache } from '@exteranto/cache'
import { Autowired } from '@exteranto/ioc'
import { Listener } from '@exteranto/events'

export class ClearAllCache implements Listener {

  @Autowired
  private cache: Cache

  public handle (payload: any) : void {
    this.cache.clear()
      .then(() => {
        // Anything you want to do upon clearing the cache.
      })
  }
}
