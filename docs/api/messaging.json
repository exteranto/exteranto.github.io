      "code": "import { Messaging } from '@exteranto/messaging'"
    },
    {
      "parent": "class-messaging",
      "id": "class-messaging-method-listen",
      "name": "listen",
      "content": {
        "block": {
          "title": "method <code>listen</code>",
          "body": {
            "description": [
              "Boots up a listener for all incoming messages. The framework skeleton ships with this functionality included in one of the basic event listeners."
            ],
            "returns": {
              "type": "void"
            }
          }
        }
      },
      "code": "s3:Messaging.listen"
    },
    {
      "parent": "class-messaging",
      "id": "class-messaging-method-send",
      "name": "send",
      "content": {
        "block": {
          "title": "method <code>send</code>",
          "body": {
            "description": [
              "Sends a message to the destination script and dispatches the corresponding event.",
              "Not that you assign messaging listeners in the event router. Read more in the 'Basic Concepts > Events & Listeners section."
            ],
            "parameters": [
              {
                "type": "script: Script",
                "description": "The script to send the message to"
              },
              {
                "type": "event: string",
                "description": "The event name to be dispatched in the destination"
              },
              {
                "type": "payload: object",
                "description": "The payload to be passed along the message",
                "optional": true
              }
            ],
            "returns": {
              "type": "Promise<any>",
              "description": "A promise resolved as the assigned message listener responds"
            }
          }
        }
      },
      "code": "s3:Messaging.send"
    }
  ]
}
